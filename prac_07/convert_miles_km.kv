BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.convert(input_number.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert(input_number.text)

    Label:
        text: app.message
        color: (1, 1, 0, 1)
        id: output_label
        font_size: 48
