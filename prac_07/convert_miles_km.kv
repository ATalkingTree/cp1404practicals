BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.increase_number(input_number.text)
            Button:
                text: 'Down'
                on_press: app.decrease_number(input_number.text)

    Button:
        text: 'Convert miles to km'
        on_press: app.convert(input_number.text)

    Label:
        color: (1, 1, 0, 1)
        id: output_label
        font_size: 48
